<h1>My Friends</h1>

<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_with url: search_friend_path, method: :get do %>  
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding ">
        <%= text_field_tag :friend, params[:friend], placeholder: "Search name or email", autofocus: true, class: "form-control form-control-lg no-right-corner-radius" %>
      </div>    
      <div class="col-sm-3 no-left-padding ">
        <%= button_tag type: :submit, class: "btn btn-primary no-left-corner-radius" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>  
      </div>
    </div>      
  <% end %>
</div>

<div id="results">
 
</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>


 






